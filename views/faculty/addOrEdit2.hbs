<h3>{{viewTitle}}</h3>

<form action="/faculty" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{faculty._id}}">
    <div class="form-group">
        <label>Faculty ID</label>
        <input type="number" class="form-control" name="Faculty_id" placeholder="ID" value="{{faculty.Faculty_id}}">
    </div>
    <div class="form-group">
        <label>Faculty Name</label>
        <input type="text" class="form-control" name="Faculty_name" placeholder="Name" value="{{faculty.Faculty_name}}">
        <div class="text-danger">
            {{faculty.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Dept</label>
        <input type="text" class="form-control" name="Faculty_dept" placeholder="dept" value="{{faculty.Faculty_dept}}">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{faculty.email}}">
        <div class="text-danger">
            {{faculty.emailError}}</div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="Address" placeholder="address" value="{{faculty.Address}}">
    </div>
    <div class = "form-group">
        <label>Phone</label>
        <input type="number" class="form-control" name="Phone" placeholder="+91" value="{{faculty.Phone}}">
    </div>
    <div class="form-group ">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/faculty/list2"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>